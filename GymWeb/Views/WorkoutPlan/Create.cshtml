@model WorkoutPlan


<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Workout Plan</h2>
            <hr/>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Date" class="p-0"></label>
            <input asp-for="Date" class="form-control"/>
            <span asp-validation-for="Date" class="text-danger"></span>            
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Notes" class="p-0"></label>
            <input asp-for="Notes" class="form-control"/>
            <span asp-validation-for="Notes" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="WorkoutPlan" asp-action="Index" class="btn btn-secondary border form-control">Back to List</a>
            </div>
        </div>

    </div>
</form>

@* Add client side validation *@
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
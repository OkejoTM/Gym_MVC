@model WorkoutDetails

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Workout Details</h2>
            </div>
        </div>
    </div>
    <div class ="card-body py-4">
        <form method="post" class="row">            
            <input asp-for="WorkoutPlanId" hidden />            
            <div class="border p-3">                
                <div class="form-floating py-2 col-12">
                    <input asp-for="Name" class="form-control border-0 shadow" />
                    <label asp-for="Name" class="ms-2"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Muscle" class="form-control border-0 shadow" />
                    <label asp-for="Muscle" class="ms-2"></label>
                    <span asp-validation-for="Muscle" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Sets" class="form-control border-0 shadow" />
                    <label asp-for="Sets" class="ms-2"></label>
                    <span asp-validation-for="Sets" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Reps" class="form-control border-0 shadow" />
                    <label asp-for="Reps" class="ms-2"></label>
                    <span asp-validation-for="Reps" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Weight" class="form-control border-0 shadow" />
                    <label asp-for="Weight" class="ms-2"></label>
                    <span asp-validation-for="Weight" class="text-danger"></span>
                </div>
                

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Create</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-area="User" asp-controller="WorkoutDetails" asp-action="Index" asp-route-id=@Model.WorkoutPlanId class="btn btn-secondary border form-control">Back to List</a>
                    </div>
                </div>

            </div>
        </form>

    </div>
</div>



@* Add client side validation *@
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
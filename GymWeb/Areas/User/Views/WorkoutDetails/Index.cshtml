@model List<WorkoutDetails>

<div class="card shadow border-0 mt-4" style="margin-bottom:2rem">
    <div class="card-header bg-secondary ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Workout Details</h2>
            </div>
        </div>
    </div>
    <div class="card-body py-4">
        <div class="row pb-3">  
            <div class="col-6 ">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="WorkoutDetails" asp-action="Create" asp-route-id=@ViewBag.WorkoutPlanId class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New Workout Plan
                </a>
            </div>

        </div>


        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Muscle
                    </th>
                    <th>
                        Sets
                    </th>
                    <th>
                        Reps
                    </th>
                    <th>
                        Weight
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td> @obj.Name </td>
                        <td> @obj.Muscle </td>
                        <td> @obj.Sets </td>
                        <td> @obj.Reps </td>
                        <td> @obj.Weight </td>                       
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="WorkoutDetails" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i>Edit
                                </a>
                                <a asp-controller="WorkoutDetails" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash3-fill"></i>Delete
                                </a>                                
                            </div>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
        <div class="col-6 text-start">
            <a asp-controller="WorkoutPlan" asp-action="Index" class="btn btn-primary">
                <i class="bi bi-arrow-left"></i> Back to Workout Plan
            </a>
        </div>
    </div>
</div>

@model List<WorkoutPlan>

<div class="card shadow border-0 mt-4" style="margin-bottom:2rem">
    <div class="card-header bg-secondary ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Workout Plans</h2>
            </div>
        </div>
    </div>
    <div class="card-body py-4">
        <div class="row pb-3">  
            <div class="col-6 ">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="WorkoutPlan" asp-action="Upsert" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New Workout Plan
                </a>
            </div>

        </div>


        <table id ="tblTable" class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Date and Time
                    </th>
                    <th>
                        Notes
                    </th>
                    <th></th>
                </tr>
            </thead>
             
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/workoutPlan.js"></script>
} 

       
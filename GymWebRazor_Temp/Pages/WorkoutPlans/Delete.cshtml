@page
@model GymWebRazor_Temp.Pages.WorkoutPlans.DeleteModel


<form method="post">
    <input asp-for="WorkoutPlan.Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Workout Plan</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="WorkoutPlan.Date" class="p-0"></label>
            <input asp-for="WorkoutPlan.Date" class="form-control" disabled />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="WorkoutPlan.Notes" class="p-0"></label>
            <input asp-for="WorkoutPlan.Notes" class="form-control" disabled />
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-Page="/WorkoutPlans/Index" class="btn btn-secondary border form-control">Back to List</a>
            </div>
        </div>

    </div>
</form>